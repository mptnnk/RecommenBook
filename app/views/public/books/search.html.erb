<div class="search-box">
  <%= form_with url: books_search_path, method: :get, local: true do |book| %>
    <div class="form-group">
      <%= book.text_field :keyword, class:"form-control" %>
      <%= book.submit 'タイトル検索', class:"form-control btn btn-success" %>
    </div>
    
    <div class="form-group">
      <%= book.text_field :genre_name, class:"form-control" %>
      <%= book.submit 'ジャンルで検索', class:"form-contorol btn btn-success" %>
    </div>
    
  <% end %>
  <% if @books.present? %>
    <%= render 'book', books: @books %>
  <% end %>
</div>