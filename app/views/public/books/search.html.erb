<div class="search-box">
  
  <%= form_with url: books_search_path, method: :get do |search| %>
    <div class="form_group">
      <%= search.text_field :keyword, class: "form-control" %>
      
    </div>
    
    <div class="form-group">
      <%= search.collection_select(:genre_id, @genres.all, "bookGenreId", "genreName", include_blank:"--") %>
    </div>
    
    <%= search.submit "検索", class: "form-control" %>
    
  <% end %>
  

 
  <% if @books.present? %>
    <%= render 'book', books: @books %>
  <% else %>
    <p>検索結果がありません</p>
  <% end %>
</div>