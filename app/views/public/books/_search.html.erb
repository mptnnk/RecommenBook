<!--検索結果の本一覧-->
  <% if books.count > 0 %>
  <table class="table table-hover table-inverse">
    <% books.each do |book| %>
    <tbody>
      <tr>
        <td style="width: 10%">
          <%= link_to book_path(book.isbn) do %>
            <%= image_tag(book['medium_image_url']) %>
          <% end %>
        </td>
        <td style="width: 20%">
          <%= link_to book_path(book.isbn) do %>
            <%= book['title'] %>
          <% end %>
          </td>
        <td style="width: 20%"><%= book['author'] %></td>
        <td class="d-none d-sm-block"><%= book['item_caption'].truncate(170) %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <%= paginate books_page %>
  <% end %>