<!--書籍詳細画面-->
<div class="container">
  <!--<h4 class="page-title">本の詳細</h4>-->
  <div class="row">
    <%= render 'show', book: @book, book_favorites: @book_favorites %>
  </div>
  <div class="row mt-3">
    <div class="col">
      <%= link_to "レビュー投稿／読んだ本登録", new_book_review_path(@book.isbn), class:"btn btn-success" %>
      <%= link_to "つぶやく", new_tweet_path(book_id: @book.isbn), class:"btn btn-primary" %>
      
      <% if current_user.favorite_books.exists?(isbn: @book.isbn) %>
        <%= link_to "お気に入り解除", book_favorite_book_path(@book.isbn), method: :delete, class:"btn btn-danger" %>
      <% else %>
        <%= link_to "お気に入り登録", book_favorite_books_path(@book.isbn), method: :post, class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
  
  <!--その書籍に関するレビューの一覧-->
  <h5 class="page-title mt-5">この本のレビュー</h5>
  <% if @reviews.present? %>
    <div class="row">
      <div class="col mt-3">
        <% @reviews.each do |review| %>
        <table class="table table-sm table-borderless">
          <tr>
            <th style="width: 10%">投稿者</th>
            <td style="width: 10%">
              <%= link_to mypage_path(name: review.user.name) do %>
                <%= review.user.name %>
              <% end %>
            </td>
            <th style="width: 10%">投稿日</th>
            <td style="width: 20%"><%= review.created_at.strftime('%Y/%m/%d') %></td>
            <th style="width: 20%">読み終わった日</th>
            <td><%= review.readed_at&.strftime("%Y/%m/%d") %></td>
            <!--「&.」は、nilの場合はnil、そうでない場合はメソッドを呼び出す-->
          </tr>
          <tr>
            <th>レビュー</th>
            <td colspan="5"><%= review.content.truncate(150) %></td>
            <!--長文の場合の省略方法と、「ネタバレを読む」の場合の編みかけ方法を後で設定する-->
          </tr>
          <tr>
            <th></th>
            <td class=<%= "like-" + review.id.to_s %> >
              <%= render "public/likes/reviewbtn", review: review %>
            </td>
            <td>
              
            </td>
            <td colspan="2">
              <%= link_to "詳細を見る", review_path(review.id), style:"display: inline-block", class:"btn btn-primary btn-sm" %>
              <% if review.user == current_user %>
                <%= link_to "編集する", edit_review_path(review.id), class:"btn btn-success btn-sm" %>
                <%= link_to "削除する", review_path(review.id), method: :delete, "data-confirm" => "レビューを削除しますか？", class:"btn btn-danger btn-sm" %>
              <% end %>
            </td>
          </tr>
          
        </table>
        <% end %>
      </div>
    </div>
  <% else %>
    <p class="ml-3">この本のレビューはまだありません</p>
  <% end %>
  
  <!--その書籍に関するつぶやきの一覧-->
  <h5 class="page-title mt-5">この本のつぶやき</h5>
  <% if @tweets.present? %>
    <div class="row">
      <div class="col mt-3">
        <% @tweets.each do |tweet| %>
        <table class="table table-sm table-borderless">
          <tr>
            <th style="width: 5%">投稿者</th>
            <td style="width: 10%">
              <%= link_to mypage_path(name: tweet.user.name) do %>
                <%= tweet.user.name %>
              <% end %>
            </td>
            <th style="width: 10%">投稿日</th>
            <td style="width: 20%"><%= tweet.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>つぶやき</th>
            <td colspan="2"><%= tweet.tweet_content.truncate(50) %></td>
            <td>
              <%= link_to "詳細を見る", tweet_path(tweet.id),style:"display: inline-block", class:"btn btn-primary btn-sm" %>
              <% if tweet.user == current_user %>
                <%= link_to "削除する", tweet_path(tweet.id), method: :delete, "data-confirm" => "つぶやきを削除しますか？", class:"btn btn-danger btn-sm" %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td class=<%= "like-" + tweet.id.to_s %> >
              <%= render "public/likes/tweetbtn", tweet: tweet %>
            </td>
          </tr>
        </table>
        <% end %>
      </div>
    </div>
  <% else %>
    <p class="ml-3">この本のつぶやきはまだありません</p>
  <% end %>
</div>
