<!--書籍詳細画面-->
<div class="container">
  <!--<h4 class="page-title">本の詳細</h4>-->
  <div class="row">
    <%= render 'public/partial/bookdetail', book: @book, book_favorites: @book_favorites %>
  </div>
  <div class="row mt-3">
    <div class="col">
      <%= link_to "レビュー投稿／読んだ本登録", new_book_review_path(@book.isbn), class:"btn btn-success" %>
      <%= link_to "つぶやく", new_tweet_path(book_id: @book.isbn), class:"btn btn-primary" %>
      
      <% if user_signed_in? && current_user.favorite_books.exists?(isbn: @book.isbn) %>
        <%= link_to "お気に入り解除", book_favorite_book_path(@book.isbn), method: :delete, class:"btn btn-danger" %>
      <% elsif user_signed_in? %>
        <%= link_to "お気に入り登録", book_favorite_books_path(@book.isbn), method: :post, class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <!--その書籍に関するレビューの一覧-->
  <h5 class="page-title mt-5">新着レビュー</h5>
  <% if @reviews.present? %>
    <div class="row">
      <div class="col mt-3 table-responsive">
        <%= render 'public/partial/lists', objects: @reviews %>
        <div class="text-right">
          <%= link_to "この本のレビュー一覧を見る", reviews_path(book_id: @book.isbn), style:"color: #ff7f50" %>
        </div>
      </div>
    </div>

  <% else %>
    <p class="ml-3">この本のレビューはまだありません</p>
  <% end %>
  
  <!--その書籍に関するつぶやきの一覧-->
  <h5 class="page-title mt-5">新着ツイート</h5>
  <% if @tweets.present? %>
    <div class="row">
      <div class="col mt-3">
        <%= render 'public/partial/lists', objects: @tweets %>
        <div class="text-right">
          <%= link_to "この本のツイートー一覧を見る", tweets_path(book_id: @book.isbn), style:"color: #ff7f50" %>
        </div>
      </div>
    </div>
  <% else %>
    <p class="ml-3">この本のツイートはまだありません</p>
  <% end %>
</div>
