  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>タイトル</th>
        <th>著者</th>
        <th>概要</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.item_caption %></td>
        <td><%= link_to (image_tag(book.medium_image_url)), book.item_url %></td>
        
      </tr>
      <% end %>
    </tbody>
  </table>