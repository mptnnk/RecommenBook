<!--tweetの一覧-->
<div class="container">
  <h4 class="page-title">
    <% if params[:user_id] %>
     <%= @user.name %>さんのつぶやき一覧（新着順）
    <% else %>
     つぶやき一覧（新着順）
    <% end %>
  </h4>
  <div class="row">
    <div class="col mt-3">
      <% if @tweets.present? %>
        <% @tweets.each do |tweet| if tweet.isbn.present? %>
          <% isbn = tweet.isbn %>
          <% book = RakutenWebService::Books::Book.search(isbn: isbn).first %>
          <table class="table table-sm">
            <tr>
              <% if tweet.isbn.present? %>
              <td rowspan="2">
                <%= link_to book_path(book.isbn) do %>
                  <%= image_tag(book['small_image_url']) %>
                <% end %>
              </td>
              <th style="width:10%">タイトル</th>
              <td style="width:30%">
                <%= link_to book_path(book.isbn) do %>
                  <%= book['title'].truncate(30) %>
                <% end %>
              </td>
              <% end %>
              <th>投稿者</th>
              <td style="width:10%">
                <%= link_to mypage_path(name: tweet.user.name) do %>
                  <%= tweet.user.name %>
                <% end %>
              </td>
            </tr>
            <tr>
              <th>つぶやき</th>
              <td colspan="2"><%= tweet.tweet_content.truncate(50) %></td>
              <td colspan="2">
                <%= link_to "詳細を見る", tweet_path(tweet.id), style:"display: inline", class:"btn btn-primary btn-sm" %>
                <% if tweet.user == current_user %>
                  <%= link_to "削除する", tweet_path(tweet.id), method: :delete, "data-confirm" => "つぶやきを削除しますか？", style:"display: inline", class:"btn btn-danger btn-sm" %>
                <% end %>
              </td>
            </tr>
          </table>
        <% end %>
      <% else %>
        <p>つぶやきがありません</p>
      <% end %>
    <% end %>
    </div>
  </div>
</div>