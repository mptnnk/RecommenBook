<div class="container">
  <div class="row">
    <div class="col-md-8 mt-3">
      <h2 class="page-title">会員登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      
      <div class="row form-group mt-4">
        <%= f.label:"ユーザーネーム", class:"col-lg-4 font-weight-bold" %>
        <%= f.text_field :name, class: "col-lg-3" %>
      </div>
      
      <div class="row form-group">
        <%= f.label :"メールアドレス", class:"col-lg-4 font-weight-bold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-3" %>
      </div>
      
      <div class="row form-group">
        <%= f.label :"パスワード（6文字以上）", class:"col-lg-4 font-weight-bold" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-lg-3" %>
      </div>
      
      <div class="row form-group">
        <%= f.label :"パスワード（確認）", class:"col-lg-4 font-weight-bold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-lg-3" %>
      </div>
      
      <div class="row">
        <div class="col-lg-4"></div>
        <%= f.submit "会員登録", class: "btn btn-primary" %>
      </div>
      <% end %>
      
      <div class="mt-3">
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>