<div class="container">
  <div class="row">
    <div class="col-md-8 mt-3">
      <h2 class="page-title">新規登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      
      <div class="row form-group mt-4">
        <%= f.label:"ユーザーネーム", class:"col-lg-3 font-weight-bold" %>
        <%= f.text_field :name %>
      </div>
      
      <div class="field">
        <%= f.label :"メールアドレス", class:"col-lg-3 font-weight-bold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      
      <div class="field">
        <%= f.label :"パスワード", class:"col-lg-3 font-weight-bold" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      
      <div class="field">
        <%= f.label :"パスワード（確認）", class:"col-lg-3 font-weight-bold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      
      <div class="actions">
        <%= f.submit "登録" %>
      </div>
      <% end %>
      
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>