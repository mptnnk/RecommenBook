<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/partial/userinfo', user: @user, book: @book, reading_lists: @reading_lists, readed_lists_count: @readed_lists_count, recommenbook: @recommenbook, in_release_reviews: @in_release_reviews %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h4 class="page-title">
        <% if @user == current_user %>
          あなたのフォロワー
        <% else %>
          <%= @user.name %>さんのフォロワー
        <% end %>
      </h4>
      <% if @followers.exists? %>
        <%= render 'public/partial/follows', users: @followers, book: @book, recommenbook: @follower_recommenbook %>
      <% else %>
        <h5 class="ml-2">フォロワーはいません</h5>
      <% end %>
    </div>
  </div>
</div>