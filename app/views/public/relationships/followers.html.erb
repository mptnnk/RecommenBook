<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/partial/userinfo', user: @user, book: @book, readed_books_count: @readed_books_count, recommenbook: @recommenbook, in_release_reviews: @in_release_reviews %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h4 class="page-title">
        <% if params[:user_name].present? && params[:user_name] == current_user.name %>
          あなたのフォロワー一覧
        <% elsif params[:user_name].present? && params[:user_name] != current_user.name %>
          <%= @user.name %>さんのフォロワー一覧
        <% end %>
      </h4>
      <% if @followers.exists? %>
        <%= render 'public/partial/follows', users: @followers, book: @book, recommenbook: @recommenbook %>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>