<% if current_user != user %>

  <% if current_user.following?(user) %>
    <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-info", style: "font-size: 12px" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success", style: "font-size: 12px" %>
  <% end %>
  
<% end %>