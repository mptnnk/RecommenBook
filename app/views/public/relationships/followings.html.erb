<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/users/info', user: @user %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h4 class="page-title"><%= @user.name %>さんのフォロー</h4>
      <% if @users.exists? %>
        <%= render 'public/users/index', users: @users %>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>