<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/partial/userinfo', user: @user, book: @book, reading_lists: @reading_lists, readed_lists_count: @readed_lists_count, recommenbook: @recommenbook, in_release_reviews: @in_release_reviews %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h4 class="page-title">
        <% if @user == current_user %>
          あなたのフォロー
        <% else %>
          <%= @user.name %>さんのフォロー
        <% end %>
      </h4>
      
      <% if @followings.exists? %>
        <%= render 'follows', users: @followings, book: @book, recommenbook: @follow_recommenbook %>
      <% else %>
        <h5 class="ml-2">No Follows</h5>
      <% end %>
      
    </div> <!--col-md-8 end-->
  </div> <!--row end-->
</div> <!--container-fluid end-->