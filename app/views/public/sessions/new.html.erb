<div class="container">
  <div class="row">
    <div class="col mt-3">
      <h2 class="page-title">ログイン</h2><br>
      
      <h5 class="page-subtitle mt-4">会員登録がお済みの方</h5>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group mt-3">
          <%= f.label:"メールアドレス", class:'col-lg-3 font-weight-bold ml-5' %>
          <%= f.email_field:email, class:"col-lg-3", placeholder:"sample@example.com" %>
        </div>
        
        <div class="form-group">
          <%= f.label:"パスワード", class:'col-lg-3 font-weight-bold ml-5' %>
          <%= f.password_field:password, class:"col-lg-3" %>
        </div>
      
        <div class="col-lg-3 ml-5">
          <%= f.submit "ログイン", class:"btn btn-primary" %>
        </div>
      <% end %>
      
      <h5 class="page-subtitle mt-5">新規会員登録をされる方</h5><br>
      <div class="ml-5">
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>

