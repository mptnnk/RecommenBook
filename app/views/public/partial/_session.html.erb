<div class="border">
  <div class="mt-3 text-center">
    <p>会員の方はここからログイン</p>
      <%= form_with model: user, url: user_session_path, method: :post do |f| %>
        <div class="form-group mt-3">
          <%= f.label:"メールアドレス", class:'font-weight-bold' %>
          <%= f.email_field:email, placeholder:"sample@example.com" %>
        </div>
              
        <div class="form-group">
          <%= f.label:"パスワード", class:'font-weight-bold' %>
          <%= f.password_field:password %>
        </div>
      
        <div>
          <%= f.submit "ログイン", class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  
  <div class="mt-5 mb-5 text-center">
    <p>新規会員登録は</p>
    <%= link_to "こちら", new_user_registration_path, class: "btn btn-success" %>
  </div>
</div>
