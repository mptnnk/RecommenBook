<div class="border">
  <div class="mt-3 text-center">
    <%= form_with model: user, url: user_session_path, method: :post do |f| %>
      <div class="form-group mt-3">
        <%= f.label:"メールアドレス", class:'font-weight-bold' %><br>
        <%= f.email_field:email, placeholder:"sample@example.com" %>
      </div>
            
      <div class="form-group">
        <%= f.label:"パスワード", class:'font-weight-bold' %><br>
        <%= f.password_field:password %>
      </div>
    
      <div>
        <%= f.submit "ログイン", class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
  
  <div class="mt-5 mb-5 text-center">
    <%= link_to "会員登録", new_user_registration_path, class: "btn btn-success" %>
  </div>
</div>
