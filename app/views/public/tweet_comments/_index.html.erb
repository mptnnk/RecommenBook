<!--tweet-->
<table>
  <tbody>
    <% tweet.tweet_comments.each do |tweet_comment| %>
      <tr>
        <td>
          <%= link_to mypage_path(name: tweet_comment.user.name) do %>
            <%= tweet_comment.user.name %>
          <% end %>
        </td>
        <td><%= tweet_comment.comment %></td>
        <td>
          <% if tweet_comment.user == current_user %>
            <%= link_to "削除", tweet_tweet_comment_path(tweet, tweet_comment), method: :delete, class: "btn btn-danger btn-sm pull-right", remote: true %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>