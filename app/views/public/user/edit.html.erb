<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2 class="page-title">会員情報編集</h2>
      <%= form_with model: @user, url: users_information_path, method: :patch, local: true do |user| %>
      
      <div class="form-group">
        <%= user.label :name, "ユーザーネーム"%>
        <%= user.text_field :name, class:"form-control name" %>
      </div>
      
      <div class="form-group">
        <%= user.label :email, "メールアドレス"%>
        <%= user.email_field :email, class:"form-control email"%>
      </div>
      
      <div class="form-group">
        <%= user.submit "変更を保存", class:"btn btn-success"%>
      </div>
      <% end %>
      <%= link_to "退会する", users_unsubscribe_path, class: 'btn btn-danger' %>
    </div>
  </div>
</div>