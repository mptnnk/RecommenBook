<div class="container">
  <h4 class="page-title">レビュー投稿</h4>
  <div class="row">
    <%= render 'public/books/show', book: @book %>
  </div>
    
  <div class="row">
    <div class="col">
      
      <%= form_with model: @review, url: book_reviews_path(@book.isbn) do |review| %>
        <%= review.hidden_field :isbn, value: @book_isbn %>
        <%= review.label :"レビューを書く",  style:"background-color: teal", class:"text-white p-2 rounded"%><br>
        <%= review.text_area :content, size:'100x5' %><br>
        <%= review.label :"読み終わった日" %>
        <%= review.date_field :readed_at %><br>
        <%= review.submit "投稿", class:"btn btn-success mt-2" %>
      <% end %>
    </div>
  </div>
</div>