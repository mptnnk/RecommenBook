<!--レビュー編集画面-->
<div class="container">
  <div class="row">
    <%= render 'public/partial/bookdetail', book: @book, book_favorites: @book_favorites %>
  </div>
  <h4 class="page-title mb-3">レビュー編集</h4>
  <div class="row">
    <div class="col-md-10">
      <%= form_with model: @review, url: review_path(@review), method: :patch do |review| %>
      <table class="table table-borderless">
        <tr>
          <th style="width: 20%">投稿者</th>
          <td><%= @review.user.name %></td>
          <th style="width: 20%">読み終わった日を変更</th>
          <td><%= review.date_field :readed_at %></td>
        </tr>
        <tr>
          <th style="width 20%">テキスト修正</th>
          <td colspan="3"><%= review.text_area :content, size:'80x5', maxlength: "500" %></td>
        </tr>
        <tr>
          <th>公開ステータス</th>
          <td>
            <%= review.radio_button :in_release, true %>
            <%= review.label :in_release, "公開する", { value: "true", style: "display: inline-block;"} %>
            <%= review.radio_button :in_release, false %>
            <%= review.label :in_release, "下書きにする", { value: "false", style: "display: inline-block;"} %><br>
          </td>
          <th>ネタバレチェック</th>
          <td>
            <%= review.check_box :spoiler %>
            <%= review.label :spoiler, "ネタバレを含む" %><br>
          </td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= review.submit "内容を変更する", class:"btn btn-success mt-2" %>
          </td>
        </tr>
        <% end %>
        <tr>
          <th></th>
          <td>
            <% if @review.user == current_user %>
              <%= link_to "削除する", review_path(@review.id), method: :delete, "data-confirm" => "レビューを削除しますか？", class:"btn btn-danger btn-sm" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>