<!--レビュー編集画面-->
<div class="container">
  <h4 class="page-title mb-3">レビュー編集</h4>
  <div class="row">
    <%= render 'public/books/show', book: @book %>
  </div>
  <div class="row">
    <div class="col-md-10">
      <%= form_with model: @review, url: review_path(@review), method: :patch do |review| %>
      <table class="table table-borderless">
        <tr>
          <th style="width: 20%">投稿者</th>
          <td><%= @review.user.name %></td>
          <th style="width: 20%">読み終わった日</th>
          <td><%= review.date_field :readed_at %></td>
        </tr>
        <tr>
          <th style="width 20%">レビュー</th>
          <td colspan="3"><%= review.text_area :content, size:'80x5' %></td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= review.submit "内容を変更する", class:"btn btn-success mt-2" %>
          </td>
        </tr>
        <% end %>
        <tr>
          <th></th>
          <td>
            <% if @review.user == current_user %>
              <%= link_to "編集する", edit_review_path(@review.id), class:"btn btn-primary btn-sm"%>
              <%= link_to "削除する", review_path(@review.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger btn-sm" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>