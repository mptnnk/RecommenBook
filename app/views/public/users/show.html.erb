<!--mypage-->
<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <%= render 'info', user: @user, book: @book, recommenbook: @recommenbook, in_release_reviews: @in_release_reviews %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="page-title">
        <% if @user == current_user %>
          マイページ
        <% else %>
          <%= @user.name %>さんのプロフィール
        <% end %>
      </h2>
      最近のレビュー・つぶやき
      最近登録したお気に入り
      <% @reviews.each do |review| %>
        <%= review.content %>
      <% end %>
    </div>
    
  </div>
</div>