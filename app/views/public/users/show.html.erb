<!--mypage-->
<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <%= render 'info', user: @user, book: @book, in_release_reviews: @in_release_reviews %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="page-title">
        <% if @user == current_user %>
          マイページ
        <% else %>
          <%= @user.name %>さんのプロフィール
        <% end %>
      </h2>
      
      <% if @user == current_user %>
        <%= link_to book_path(@random_book.isbn) do %>
          <p>あなたへのランダムおすすめ本</p>
        <% end %>
      <% end %>
      
    </div>
    
  </div>
</div>