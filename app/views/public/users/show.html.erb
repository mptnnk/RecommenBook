<!--mypage-->
<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/partial/userinfo', user: @user, book: @book, recommenbook: @recommenbook, in_release_reviews: @in_release_reviews %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="page-title">
        <% if @user == current_user %>
          マイページ
        <% else %>
          <%= @user.name %>さんのプロフィール
        <% end %>
      </h2>
      
      <h4 class="mypage-title">最近のレビュー</h4>
        <div class="row ml-2">
          <% if @reviews.present? %>
            <%= render 'public/partial/mypage', objects: @reviews %>
          <% else %>
            投稿がありません
          <% end %>
        </div>
        <div class="text-right mt-2">
          <%= link_to reviews_path(user_id: @user.id),style: "color: black;" do %>
            ＞＞<%= @user.name %>のレビュー一覧へ
          <% end %>
        </div>
      <h4 class="mypage-title">最近のツイート</h4>
        <div class="row ml-2">
          <% if @tweets.present? %>
            <%= render 'public/partial/mypage', objects: @tweets %>
          <% else %>
           投稿がありません
          <% end %>
        </div>
        <div class="text-right mt-2">
          <%= link_to tweets_path(user_id: @user.id), style: "color: black;" do %>
            ＞＞<%= @user.name %>のツイートー一覧へ
          <% end %>
        </div>
      <h4 class="mypage-title">最近のお気に入りの本</h4>
        <div class="row ml-2">
          <% if @favorite_books.present? %>
            <%= render 'public/partial/mypage', objects: @favorite_books %>
          <% else %>
            お気に入りの本がありません
          <% end %>
        </div>
        <div class="text-right mt-2">
          <%= link_to favorite_books_path(user_id: @user.id), style: "color: black;" do %>
            ＞＞<%= @user.name %>のお気に入りの本ー一覧へ
          <% end %>
        </div>
      </div>
    </div>
    
  </div>
</div>