<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
      <h2 class="page-title">会員情報編集</h2>
      <%= form_with model: @user, url: users_information_path, method: :patch, local: true do |user| %>
      <table class="table table-borderless">
        <tr>
          <th>ユーザーネーム </th>
          <td><%= user.text_field :name, class: "form-control" %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= user.email_field :email, class: "form-control" %></td>
        </tr>
        <tr>
          <th>プロフィール画像</th>
          <td>
            <%= image_tag @user.get_profile_image, size:'80x100' %>
            <%= user.file_field :profile_image, class: "form-control-file profile_image mt-2", accept: 'image/*' %> 
          </td>
        </tr>
        <tr>
          <th>パスワード</th>
          <td><%= user.password_field :encrypted_password, class: "form-control" %></td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= user.submit "変更を保存", class: "btn btn-success" %>
            <%= link_to "退会する", users_unsubscribe_path, class: "btn btn-danger" %>
          </td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>